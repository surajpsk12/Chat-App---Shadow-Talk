<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00FFD1"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#8B5CF6"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#121212"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#00FFD1"/>
        </shape>
    </item>
</selector>
