<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00E6BD"
                android:endColor="#00B89A"
                android:angle="135"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFD1"
                android:endColor="#00E6BD"
                android:angle="135"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

</selector>