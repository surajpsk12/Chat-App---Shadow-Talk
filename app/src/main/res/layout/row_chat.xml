<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chatMessage"
            type="com.surajvanshsv.chatapp.model.ChatMessage" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:padding="12dp"
        android:animateLayoutChanges="true">

        <!-- RECEIVED MESSAGE -->
        <LinearLayout
            android:id="@+id/left_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="@{chatMessage.isMine ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            android:gravity="start"

            android:animateLayoutChanges="true">

            <!-- Neon Cyan Indicator -->
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/neon_cyan_dot"
                android:elevation="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical"
                android:background="@drawable/left_message_bg_enhanced"
                android:padding="14dp"
                android:elevation="6dp"
                android:layout_marginEnd="60dp"
                android:maxWidth="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{chatMessage.text}"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:letterSpacing="0.01"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:text="@{chatMessage.convertTime()}"
                    android:textSize="11sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.02" />
            </LinearLayout>
        </LinearLayout>

        <!-- SENT MESSAGE -->
        <LinearLayout
            android:id="@+id/right_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="@{chatMessage.isMine ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/left_message_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"

            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_message_bg_enhanced"
                android:orientation="vertical"
                android:padding="14dp"
                android:elevation="6dp"
                android:layout_marginStart="60dp"
                android:maxWidth="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{chatMessage.text}"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:letterSpacing="0.01"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{chatMessage.convertTime()}"
                        android:textSize="11sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="0.02"
                        android:layout_marginEnd="4dp" />

                    <!-- Message Status Indicator -->
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/message_sent_indicator"
                        android:alpha="0.8" />
                </LinearLayout>
            </LinearLayout>

            <!-- Neon Purple Indicator -->
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/neon_purple_dot"
                android:elevation="4dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>