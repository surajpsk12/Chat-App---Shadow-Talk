<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:background="@drawable/neon_main_bg"
        android:animateLayoutChanges="true"
        tools:context=".views.GroupsActivity">

        <!-- Header Section with Gradient -->
        <LinearLayout
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/neon_header_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Groups"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:layout_marginTop="24dp" />

            <View
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/neon_accent_line" />

        </LinearLayout>

        <!-- RecyclerView with modern styling -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:padding="12dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <!-- Enhanced FAB with neon styling -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="12dp"
            android:stateListAnimator="@animator/neon_fab_animator"
            app:backgroundTint="#00FFD1"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:rippleColor="#FFFFFF"
            app:srcCompat="@drawable/neon_add_icon"
            app:tint="#121212"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtle background pattern overlay -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/neon_pattern_overlay"
            android:alpha="0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>